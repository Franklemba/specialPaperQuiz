
<div class="quiz">
      
    <!-- <div class="quiz"> -->
        <div  id="modal-bg">
          <div class="resultModal" id="resultModal">
            <button class="close-button" id="closeButton">&times;</button>
            <h2>Results</h2>
            <h2>You scored <%=grade%> / <%=total%></h2>
          </div>
        </div>
    
        <!-- <form action="/results" method="post"> -->
    
            <!--  -->
            <% Papers.paperOne.forEach(paper => { %>
                <div class="quiz-container">
                  <div class="question">
                    <img src="/sp1/<%=paper.question%>" alt="question" srcset="">
                    <div class="options ID<%=paper.id%>">
                        <input type="radio" name="ans<%=paper.id%>" value="A" id="" required disabled <%= paper.ans === 'A' ? 'checked' : '' %> class="<%= results[paper.id].isCorrect ? 'correct' : 'incorrect' %>">
                      <span>A</span>
                      <input type="radio" name="ans<%=paper.id%>" value="B" id="" required disabled <%= paper.ans === 'B' ? 'checked' : '' %> class="<%= results[paper.id].isCorrect ? 'correct' : 'incorrect' %>">
                      <span>B</span>
                      <input type="radio" name="ans<%=paper.id%>" value="C" id="" required disabled <%= paper.ans === 'C' ? 'checked' : '' %> class="<%= results[paper.id].isCorrect ? 'correct' : 'incorrect' %>">
                      <span>C</span>
                      <input type="radio" name="ans<%=paper.id%>" value="D" id="" required disabled <%= paper.ans === 'D' ? 'checked' : '' %> class="<%= results[paper.id].isCorrect ? 'correct' : 'incorrect' %>">
                      <span>D</span>
                    </div>
                  </div>
                </div>
                <hr>
              <% }) %>
    
                <!-- <input type="submit" value="submit" placeholder="submit"> -->
        <!-- </form> -->
    
         
    </div>
    
    
    <style>
        .quiz {
          font-family: Arial, sans-serif;
          margin-top: 20%;
         /* margin: 5%; */
         padding-top: 20%;
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
          /* height: 100vh; */
          background-color: #f3f3f3;
        }
        .modal{
            background-color: aqua;
        }
      
        .quiz-container {
          width: fit-content;
          background-color: #fff;
          padding: 20px;
          border-radius: 10px;
          box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        }
      
        .question {
          display: flex;
          align-items: center;
          flex-direction: column;
          justify-content: space-between;
          padding: 10px;
          border: 1px solid #ccc;
          border-radius: 5px;
          margin-bottom: 10px;
        }
      
        .question img {
          max-width: 100%;
          border: 1px solid #ccc;
          border-radius: 5px;
          margin-right: 10px;
        }
      
        .options {
          display: flex;
          flex-wrap: wrap;
          align-items: center;
        }
      
        .options span {
          margin-right: 5px;
          font-size: large;
          font-weight: bolder;
          color: black;
        }
      
        .options input[type="radio"] {
          margin-right: 10px;
          border: solid black 2px;
          font-size: large;
          font-weight: bolder;
          color: black
        }
    
        .options input[type="radio"].correct + span {
        color: green;
      }
    
      /* Style for incorrect answer radio button */
      .options input[type="radio"].incorrect + span {
        color: red;
      }
      
        hr {
          border: 0;
          border-top: 1px solid #ccc;
          margin: 15px 0;
        }

        .modal-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 999;
    display: none;
  }

  /* Style for the result modal */
  .resultModal {
    background-color: white;
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    position: relative;
    z-index: 1000;
  }

  /* Style for the close button */
  .close-button {
    position: absolute;
    top: 10px;
    right: 10px;
    font-size: 1.5rem;
    background-color: transparent;
    border: none;
    cursor: pointer;
  }

  .quiz-container {
    max-width: 800px; /* Adjust this value based on your design */
    margin: 0 auto;
  }

  /* Media query for smaller screens */
  @media (max-width: 768px) {
    .quiz {
      margin: 2%;
    }
    .quiz-container {
      padding: 10px;
    }
}
      </style>
      
      <script>
        const modalBg = document.getElementById('modal-bg');
        const resultModal = document.getElementById('resultModal');
        const closeButton = document.getElementById('closeButton');
      
        // modalBg.addEventListener("click",()=>{
        //     alert("what the heck")
        // })
        // Show the modal
        function showModal() {
          modalBg.style.display = 'flex';
        }
      
        // Hide the modal
        function hideModal() {
          modalBg.style.display = 'none';
        }
      
        // Show the modal when the page loads
        window.onload = showModal;
      
        // Close the modal when the close button is clicked
        closeButton.addEventListener('click', hideModal);
      </script>
      