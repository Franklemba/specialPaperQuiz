
<div class="quiz">
      
        <div  class="modal-bg">
          <div class="resultModal" id="resultModal">
            <span class="close-button" id="closeButton">&times;</span>
            <h1>Results</h1>
            <hr>
            
            <div class="resultInner">
              <h3> scored: <%=grade%>/<%=total%></h3>
              <h3>time elapsed: <%=time%> </h3>
            </div>
            <hr>
            <div class="quizLinks">
              <a href="/sp1_quiz">special paper 1</a>
              <a href="/sp2_quiz">special paper 2</a>
            </div>
          </div>
        </div>
    
    
            <!--  -->
            <% results.forEach((paper, index) => { %>
                <div class="quiz-container">
                  <div class="question" >
                    <div class="question-number">Question <%= index + 1 %></div>
                    <img src="/uploads/sp1/<%=paper.question%>" alt="question" srcset="">
                    <div class="options ">
                        <input type="radio" name="ans<%=paper.question%>" value="A" id="" required disabled <%= paper.correctAnswer === 'A' ? 'checked' : '' %> class="<%= paper.isCorrect ? 'correct' : 'incorrect' %>">
                      <span>A</span>
                      <input type="radio" name="ans<%=paper.question%>" value="B" id="" required disabled <%= paper.correctAnswer === 'B' ? 'checked' : '' %> class="<%= paper.isCorrect ? 'correct' : 'incorrect' %>">
                      <span>B</span>
                      <input type="radio" name="ans<%=paper.question%>" value="C" id="" required disabled <%= paper.correctAnswer === 'C' ? 'checked' : '' %> class="<%= paper.isCorrect ? 'correct' : 'incorrect' %>">
                      <span>C</span>
                      <input type="radio" name="ans<%=paper.question%>" value="D" id="" required disabled <%= paper.correctAnswer === 'D' ? 'checked' : '' %> class="<%= paper.isCorrect ? 'correct' : 'incorrect' %>">
                      <span>D</span>
                    </div>
                  </div>
                </div>
                <hr>
            <% }) %>
    
                
        
    
         
    </div>
    
    
    <style>
        .quiz {
          font-family: Arial, sans-serif;
          /* margin-top: 20%; */
         /* margin: 5%; */
         padding-top: 5%;
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
          /* height: 100vh; */
          background-color: #f3f3f3;
        }
        /* .modal{
            background-color: aqua;
        } */
      
        .quiz-container {
          width: fit-content;
          background-color: #fff;
          padding: 20px;
          border-radius: 10px;
          box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        }
      
        .question {
          display: flex;
          align-items: center;
          flex-direction: column;
          justify-content: space-between;
          padding: 10px;
          border: 1px solid #ccc;
          border-radius: 5px;
          margin-bottom: 10px;
        }
      
        .question img {
          max-width: 100%;
          border: 1px solid #ccc;
          border-radius: 5px;
          margin-right: 10px;
        }
       
      
        .options {
          display: flex;
          flex-wrap: wrap;
          align-items: center;
        }
      
        .options span {
          margin-right: 5px;
          font-size: large;
          font-weight: bolder;
          color: black;
        }
      
        .options input[type="radio"] {
          margin-right: 10px;
          border: solid black 2px;
          font-size: large;
          font-weight: bolder;
          color: black
        }
    
      .options input[type="radio"].correct + span {
        color: green;
      }
    
      /* Style for incorrect answer radio button */
      .options input[type="radio"].incorrect + span {
        color: red;
      } 
      
        hr {
          border: 0;
          border-top: 1px solid #ccc;
          margin: 15px 0;
        }

  .modal-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(243, 243, 243, 0.8); /* Semi-transparent background */
    backdrop-filter: blur(2px); /* Apply a blur effect */
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 99;
    /* display: none; */
  }

  /* Style for the result modal */
  .resultModal {
    background-color: white;
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    position: relative;
    width: 40vw;
    height: 40vh;
    z-index: 100;
  }
  .resultModal .resultInner{
    /* background-color: rgb(216, 198, 198); */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .resultModal .resultInner h3{
      font-style: italic;
  }
  .resultModal .resultInner h3:hover{
      font-style: italic;
      font-weight: bolder;
  }
  .resultModal .quizLinks{
    display: flex;
    justify-content: space-evenly;
  }

  /* Style for the close button */
  .close-button {
    position: absolute;
    top: 10px;
    right: 10px;
    font-size: 1.5rem;
    background-color: transparent;
    color: red;
    border: none;
    cursor: pointer;
  }
  .close-button:hover{
    font-weight: bolder;
  }

  .quiz-container {
    max-width: 800px; /* Adjust this value based on your design */
    margin: 0 auto;
  }

  /* Media query for smaller screens */
  @media (max-width: 768px) {
    .quiz {
      margin: 2%;
      padding-top: 20%;
    }
    .quiz-container {
      padding: 10px;
    }
    .resultModal {
      height: fit-content;
      width: 70vw;
    }


}
</style>
      
      <script>
        const modalBg = document.querySelector('.modal-bg');
        const resultModal = document.getElementById('resultModal');
        const closeButton = document.getElementById('closeButton');
      
        // modalBg.addEventListener("click",()=>{
        //     modalBg.style.display = "none";
        // })
        
        // Close the modal when the close button is clicked
        closeButton.addEventListener('click',()=>{
          modalBg.style.display = "none";
        });
      </script>
      